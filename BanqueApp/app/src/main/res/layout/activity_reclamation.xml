<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="myapp.bank.sos.banquetunisie.ReclamationActivity"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:elevation="0dp"

        style="@style/Toolbar">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Reclamation"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/guillotine_item_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <ImageView

                android:id="@+id/send"
                android:layout_marginRight="20dp"
                android:src="@android:drawable/ic_menu_send"
                android:layout_width="40dp"
                android:layout_height="40dp" />



        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"

       >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@android:color/secondary_text_dark"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/dest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackcolor"
            android:text="qualite.retail@atb.com.tn"
            android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c9c9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"


            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sujet"
                android:textColor="@android:color/secondary_text_dark"
                android:fontFamily="sans-serif"
                android:textSize="22sp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blackcolor"

                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c9c9" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:hint="Ecrire ici..."
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textColorHint="@android:color/secondary_text_dark_nodisable"
            android:textColor="@color/blackcolor"
          />

</LinearLayout>
    </LinearLayout>
</LinearLayout>
    </FrameLayout>