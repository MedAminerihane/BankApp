<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="myapp.bank.sos.banquetunisie.DabActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <android.support.v7.widget.Toolbar
            android:paddingLeft="@dimen/activity_horizontal_margin"

            android:id="@+id/toolbar"
            app:contentInsetStart="0dp"
            android:elevation="0dp"

            style="@style/Toolbar">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Detail Agence"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/guillotine_item_text_size" />



        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            >
            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/custom_bg"
                   android:layout_margin="@dimen/fab_margin"

                    android:padding="8dp">
                    >

                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        android:name="com.google.android.gms.maps.MapFragment"
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        >
                    <TextView
                        android:id="@+id/city"
                        android:singleLine="true"
                        android:text="test test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/widget_edittext_dark"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginLeft="2dp"

                        android:textSize="18sp"
                        />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/distane_bank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/secondary_text_dark"
                                android:fontFamily="sans-serif-light"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:src="@drawable/gpsmark"/>
                        <TextView
                            android:id="@+id/adresse_bank"
                            android:singleLine="true"
                            android:text="test test"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/secondary_text_light"
                            android:fontFamily="sans-serif-light"
                            android:textSize="15sp"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/custom_bg"
                    android:layout_margin="@dimen/fab_margin"
                    android:padding="8dp"
                    >



                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                    <TextView
                        android:id="@+id/name_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="Event Name"
                        android:text="test test"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif"
                        android:textSize="20sp"

                        />

                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/hour"
                            android:singleLine="true"
                            android:text="Heure de Travail: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dip"
                            android:textColor="@color/primaryColorDark"
                            android:fontFamily="sans-serif-light"

                            android:textSize="18sp"
                            />
                        <TextView
                            android:id="@+id/service"
                            android:singleLine="true"
                            android:text="services d'entreprise: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dip"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-light"

                            android:textSize="18sp"
                            />

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_bg"
                    android:layout_margin="@dimen/fab_margin"
                    android:padding="8dp"
                    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Phone"
        android:text="NumÃ©ro de telephone"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:textSize="18sp"

        />
    <TextView
        android:id="@+id/Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="Phone"
        android:text="+21622222222"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:textSize="18sp"

        />




</LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                      >





                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:src="@drawable/phone"
android:layout_gravity="right"
                        app:backgroundTint="@color/accentColor"
                        app:rippleColor="#FFF" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>


        </android.support.design.widget.CoordinatorLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>


